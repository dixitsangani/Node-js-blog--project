<%- include("header") %>

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive table--no-card m-b-30">

                            <form>
                                <input type="text" name="search" value="<%=search%>">
                                <input type="submit" name="searching" value="search">
                            </form>

                            <table class="table table-borderless table-striped table-earning">
                                <thead>
                                    <tr>
                                        <th>title</th>
                                        <th>sliderlink</th>
                                        <th>description</th>
                                        <th>sliderimage</th>
                                        <th>status</th>
                                        <th>action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <% var no=1; for(var v of sliderdata) { %>
                                        <tr>
                                            <td>
                                                <%= v.title %>
                                            </td>
                                            <td>
                                                <%= v.sliderlink %>
                                            </td>
                                            <td>
                                                <%= v.description %>
                                            </td>

                                            <td><img src="<%= v.sliderimage %>" height="100"></td>

                                            <td>
                                                <%if(v.status){%>
                                                    <a href="/admin/slider/deactive/<%=v.id%> " class="btn btn-success">active</a>
                                                    <%} else {%>
                                                        <a href="/admin/slider/active/<%=v.id%> " class="btn btn-danger">deactive</a>
                                                        <%}%>
                                            </td>

                                            

                                            <td style="font-size: 25px;">
                                                
                                                <a href="/admin/slider/deletesliderRecord/<%= v.id %>"><i
                                                        class="fa fa-trash"></i></a>
                                                
                                            </td>

                                        </tr>
                                        <% } %>


                                        <tr>
                                            <td colspan="9">
                                               <% if(currentpage !=0){ %>
                                                <a class="btn btn-success" href="/admin/slider/viewslider?page=<%= currentpage-1%>&search=<%search%>">Back</a>

                                               <% } %>
                                                <a class="btn btn-success" href="/admin/slider/viewslider?page=<%= currentpage %>&search=<%search%>"><%= currentpage %></a>

                                                <% var next = parseInt(currentpage)+1%>

                                                <%if(next != totalpage){%>
                                                <a class="btn btn-success" href="/admin/slider/viewslider?page=<%=next%>&<%= currentpage %>">next</a>
                                                    <%}%>
                                            </td>
                                        </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>






                <%- include("footer") %>