<%- include("header") %>

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive table--no-card m-b-30">

                            <form>
                                <input type="text" name="search" value="<%=search%>">
                                <input type="submit" name="searching" value="search">
                            </form>

                            <form action="/admin/deleteallrecoard" method="post">
                            <table class="table table-borderless table-striped table-earning">
                                <thead>
                                    
                                    <tr>
                                        <th>
                                            <input type="checkbox" id="checkAll"  >
                                            <button type="submit" style="color: white;"><i class="fa fa-trash"></i></a></button>
                                        </th>
                                        <th>no</th>
                                        <th>name</th>
                                        <th>email</th>
                                        <th>city</th>
                                        <th>gender</th>
                                        <th>hobby</th>
                                        <th>msg</th>
                                        <th>image</th>
                                        <th>status</th>
                                        <th>action</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    <% var no=1; for(var v of viewdata) { %>
                                        <tr>
                                            <td>
                                                <input type="checkbox"  value="<%=v.id%>" name="adminids">
                                            </td>
                                            <td>
                                                <%=no++%>
                                            </td>
                                            <td>
                                                <%= v.name %>
                                            </td>
                                            <td>
                                                <%= v.email %>
                                            </td>
                                            <td>
                                                <%= v.city %>
                                            </td>
                                            <td>
                                                <%= v.gender %>
                                            </td>
                                            <td>
                                                <%= v.hobby %>
                                            </td>
                                            <td>
                                                <%= v.msg %>
                                            </td>
                                            <td><img src="<%= v.image %>" height="100"></td>
                                            <td>
                                                <%if(v.status){%>
                                                    <a href="/admin/deactive/<%=v.id%> " class="btn btn-success">active</a>
                                                    <%} else {%>
                                                        <a href="/admin/active/<%=v.id%> " class="btn btn-danger">deactive</a>
                                                        <%}%>
                                            </td>

                                            <td style="font-size: 25px;">
                                                <a href="/admin/deleteAdminRecord/<%= v.id %>"><i
                                                        class="fa fa-trash"></i></a>
                                                <a href="/admin/updateAdminRecord?id=<%= v.id %>"><i
                                                        class="fa fa-edit"></i></i></a>
                                            </td>

                                        </tr>
                                        <% } %>

                                            <!-- 1 2  3 4 next prev page -->

                                            <tr>
                                                <td colspan="9">
                                                    <% for(var i=0; i<totalpage;) {%>

                                                        <a href="/admin/viewadmin/?page=<%= i %>&search=<%=search%>">
                                                            <%= ++i %>
                                                        </a>

                                                        <% }%>
                                                </td>
                                            </tr>
                                </tbody>
                            </table>
                        </form>

                        </div>
                    </div>

                </div>






                <%- include("footer") %>

                <script>
                    $("#checkAll").click(function(){
                         $('input:checkbox').not(this).prop('checked', this.checked);
                    });
                </script>