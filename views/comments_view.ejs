<%- include("header") %>

<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section_content section_content--p30">
        <div class="container-fluid">
            <div class="row">
                <% if (locals.flash && locals.flash.success && locals.flash.success.length > 0) { %>
                    <div class="alert alert-success">
                        <%= locals.flash.success %> 
                    </div>
                <% } %>
                
                <form>
                    <input class="au-input au-input--xl" type="text" name="search" value="<%= search %>" placeholder="Search" />
                    <input class="btn btn-danger btn-sm" type="submit" name="searching" value="Search">
                </form>

                <form action="/admin/multipleDelete" method="post">
                    <div class="col-lg-12">
                        <div class="table-responsive table--no-card m-b-30">
                            <table class="table table-borderless table-striped table-earning">
                                <thead>
                                    <tr>
                                        <th>
                                            <input type="checkbox" id="checkAll">
                                            <button type="submit" style="color: red;">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </th>
                                        <th>No</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Message</th>
                                       
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% var no = 1; for (var ad of viewData) { %>
                                        <tr>
                                            <td><input type="checkbox" value="<%= ad._id %>" name="adminIds"></td>
                                            <td><%= no++ %></td>
                                            <td><%= ad.name %></td>
                                            <td><%= ad.email %></td>
                                            <td><%= ad.message.slice(0, 30) %></td>
                                           
                                            <td style="font-size: 25px;">
                                                <a href="/admin/comments/deletecommentRecord/<%= ad._id %>"><i class="fa fa-trash"></i></a>
                                              
                                            </td>
                                        </tr>
                                    <% } %>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("footer") %>

<script>
    document.getElementById("checkAll").addEventListener('click', function () {
        const checkboxes = document.querySelectorAll('input[type="checkbox"]');
        checkboxes.forEach(checkbox => {
            if (checkbox !== this) {
                checkbox.checked = this.checked;
            }
        });
    });
</script>
