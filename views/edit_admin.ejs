<%- include("header") %>

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">


                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <strong>edit admin</strong>
                            </div>
                            <% let fullname=upatedata.name.split(" ");%>
                            <div class=" card-body card-block">
                                <form action="/admin/editadmindata" method="post" enctype="multipart/form-data"
                                    class="form-horizontal">

                                    <input type="hidden" name="id" value="<%=upatedata.id%>">


                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">fast name</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" name="fname" placeholder="Text"
                                                value="<%=fullname[0]%>" class="form-control">
                                            <small class="form-text text-muted">This is a help text</small>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">last name</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" name="lname" placeholder="Text"
                                                value="<%=fullname[1]%>" class="form-control">
                                            <small class="form-text text-muted">This is a help text</small>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="email-input" class=" form-control-label">Email</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="email" id="email-input" name="email"
                                                value="<%=upatedata.email%>" placeholder="Enter Email"
                                                class="form-control">
                                            <small class="help-block form-text">Please enter your email</small>
                                        </div>
                                    </div>

                                    <% const city=["surat","rajkot","junagadh"] %>
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="select" class=" form-control-label">Select City</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <select name="city" id="select" class="form-control">
                                                    <option value="0">---select---</option>
                                                    <% city.forEach((v,i)=> { %>
                                                        <option value="<%=v%>" <% if(upatedata.city==v){ %>
                                                            <%= 'selected' %>
                                                                <%}%> ><%= v %>
                                                        </option>
                                                        <%})%>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label class=" form-control-label">Gender</label>
                                            </div>
                                            <div class="col col-md-9">
                                                <div class="form-check-inline form-check">
                                                    <label for="inline-radio1" class="form-check-label ">
                                                        <input type="radio" id="inline-radio1" name="gender"
                                                            value="male" class="form-check-input" <%
                                                            if(upatedata.gender=='male' ) { %>
                                                        <%= 'checked' %>
                                                            <% } %>>male
                                                    </label>
                                                    <label for="inline-radio2" class="form-check-label ">
                                                        <input type="radio" id="inline-radio2" name="gender"
                                                            value="female" class="form-check-input" <%
                                                            if(upatedata.gender=='female' ) { %>
                                                        <%= 'checked' %>
                                                            <% } %>>female
                                                    </label>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label class=" form-control-label">hobby</label>
                                            </div>
                                            <div class="col col-md-9">
                                                <div class="form-check-inline form-check">
                                                    <label for="inline-checkbox1" class="form-check-label ">
                                                        <input type="checkbox" id="inline-checkbox1" name="hobby"
                                                            value="games" class="form-check-input" <%
                                                            if(upatedata.hobby.includes('games')){ %>
                                                        <%= 'checked' %>
                                                            <% } %>>games
                                                    </label>
                                                    <label for="inline-checkbox2" class="form-check-label ">
                                                        <input type="checkbox" id="inline-checkbox2" name="hobby"
                                                            value="read" class="form-check-input" <%
                                                            if(upatedata.hobby.includes('read')){ %>
                                                        <%= 'checked' %>
                                                            <% } %>>read
                                                    </label>
                                                    <label for="inline-checkbox3" class="form-check-label ">
                                                        <input type="checkbox" id="inline-checkbox3" name="hobby"
                                                            value="sleeping" class="form-check-input" <%
                                                            if(upatedata.hobby.includes('sleeping')){ %>
                                                        <%= 'checked' %>
                                                            <% } %> >sleeping
                                                    </label>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="textarea-input" class=" form-control-label">Textarea</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <textarea name="msg" id="textarea-input" rows="2"
                                                    placeholder="message..."
                                                    class="form-control"><%=upatedata.msg%></textarea>
                                            </div>
                                        </div>

                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="file-input" class=" form-control-label">image</label>
                                            </div>
                                            <div class="col-12 col-md-9 d-flex">
                                                <input type="file" id="file-input" name="image"
                                                    class="form-control-file">
                                                <img src="<%=upatedata.image%>" height="100" width="100">
                                            </div>
                                        </div>

                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                <i class="fa fa-dot-circle-o"></i> edit
                                            </button>
                                            <button type="reset" class="btn btn-danger btn-sm">
                                                <i class="fa fa-ban"></i> Reset
                                            </button>
                                        </div>

                                </form>
                        </div>

                    </div>
                </div>
            </div>

            <%- include("footer") %>